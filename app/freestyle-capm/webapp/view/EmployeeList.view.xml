<mvc:View
   controllerName="freestyle-capm.controller.employeeList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">

    <Table 
        id="idEmployeeTable"
        autoPopinMode="true"
        contextualWidth="Auto"
        growing="true"
        items="{employee>/Employees}">			
                
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>employeeListTitle}"/>
                <ToolbarSpacer/>      
                <Button width="150px" id="CreateBtn" icon="sap-icon://add" press="addEmployee" text="Add Employee"/>            
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column width="12rem">
                <Text text="Name"/>
            </Column>
            <Column width="12rem">
                <Text text="Department"/>
            </Column>
            <Column width="12rem">
                <Text text="Industry"/>
            </Column>
            <Column width="12rem">
                <Text text="Start Date"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem 
                vAlign="Middle"
                press=".onPress"
                type="Navigation"> 
                <cells>
                    <ObjectIdentifier title="{employee>fullName}" text="{employee>role}"/>
                        <Text text="{employee>department}"/>
                        <Text text="{employee>industries}"/>
                        <Text text="{employee>startDate}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>