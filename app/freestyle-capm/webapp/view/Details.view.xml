	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"

	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true"
	height="100%"
xmlns:mvc="sap.ui.core.mvc" >

    <Page
		id="idPage"
		title=" Details Page"
        showNavButton="true"
		navButtonPress=".onNavBack"
		icon = "sap-icon://add-favorite">
		<headerContent>
			<Button id="editEmployeeButton" icon="sap-icon://edit" text="Edit Employee" press="EditEmployee"/>   
			<Button id="DeleteEmployeeBtn"  icon="sap-icon://delete" text="Delete Employee" press="DeleteEmployee"/>          
		</headerContent>
		<content>
			<ObjectHeader
				icon="test-resources/sap/m/images/Woman_04.png"
				iconDensityAware="false"
				iconAlt="{name}"
				imageShape="Circle"
				responsive="true"
				title="{name}"
				backgroundDesign="Solid">
				<attributes>
					<ObjectAttribute title="Email" text="{email}" />
					<ObjectAttribute title="Role" text="{role}" />
					<ObjectAttribute title="Industry" text="{industry}" />
					<ObjectAttribute title="Direct Report" text="{directReport}" />
					<ObjectAttribute title="Start Date" text="{startDate}" />
				</attributes>
			</ObjectHeader>

			<ScrollContainer height="100%" width="100%"	vertical="true">
			<Table 
				id="skillsTable"
				autoPopinMode="true"
				contextualWidth="Auto"
				growing="true"
				items="{skills}">							
			<headerToolbar>
				<Toolbar>
					<Title text="{i18n>skillTableHeader}"/>
					<ToolbarSpacer/>      
						<Button id="skillButton" icon="sap-icon://add-favorite" tooltip="Add Skills" text="Add Employee Skillz" press= "addSkill"/>            
				</Toolbar>
			</headerToolbar>
					<columns>
						<Column width="12rem">
							<Text text="Name"/>
						</Column>
						<Column width="12rem">
							<Text text="Comfort Level"/>
						</Column>
						<Column width="12rem">
							<Text text="Date Acquired"/>
						</Column>
						<Column width="12rem">
							<Text text="Renewal"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem 
							vAlign="Middle"
							press=".onPress"
							type="Navigation"> 
							<cells>
								<ObjectIdentifier title="dateAcquired" text="dateAcquired"/>
									<Text text="{dateAcquired}"/>
									<Text text="{dateAcquired}"/>
									<Text text="{dateAcquired}"/>
									<Text text="{dateAcquired}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>

