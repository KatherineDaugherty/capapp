<mvc:View
	controllerName="freestyle.capm.controller.Detail"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"

	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true"
	height="100%"
xmlns:mvc="sap.ui.core.mvc" >

    <Page
		id="idPage"
		title=" Details Page"
        showNavButton="true"
		navButtonPress=".onNavBack"
		icon = "sap-icon://add-favorite">
		<headerContent>
			<Button 
				id="skillButton" 
				icon="sap-icon://add-favorite" 
				tooltip="Add Skills" 
				text="Add Employee Skillz" 
				press= "addSkill"/>
			<Button 
				id="editEmployeeButton" 
				icon="sap-icon://edit" 
				text="Edit Employee" 
				press="EditEmployee"/>   
			<Button 
				id="DeleteEmployeeBtn" 
				text="Delete Employee" 
				icon="sap-icon://delete" 
				press="DeleteEmployee"/>          
        
		</headerContent>
		<content>

			<ObjectHeader
				icon="test-resources/sap/m/images/Woman_04.png"
				iconDensityAware="false"
				iconAlt="{name}"
				imageShape="Circle"
				responsive="true"
				title="{name}"
				backgroundDesign="Solid">
				<attributes>
					<ObjectAttribute title="Email" text="{email}" />

					<ObjectAttribute title="Role" text="{role}" />
					<ObjectAttribute title="Industry" text="{industry}" />
					<ObjectAttribute title="Direct Report" text="{directReport}" />
					<ObjectAttribute title="Start Date" text="{startDate}" />

					

				</attributes>
			</ObjectHeader>

			<ScrollContainer height="100%" width="100%"	vertical="true">
				<f:GridContainer
					id="grid1"
					class="sapUiSmallMargin"
					snapToRow="true"
					items="{assignedSkills}">
					<f:layout>
						<f:GridContainerSettings rowSize="80px" columnSize="80px" gap="18px" />
					</f:layout>
					<f:layoutXS>
						<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
					</f:layoutXS>

					<f:items >
					<GenericTile 
						header="{skill}" 
						subheader="{type}">
						<layoutData>
							<f:GridContainerItemLayoutData minRows="2" columns="2" />
						</layoutData>
						<TileContent>
						<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<m:VBox>
								<m:Label text="Date Acquired"/>
								<m:Label text="{dateAcquired}"/>
								<m:Label text="Comfort Level"/>
								<m:ProgressIndicator 
									percentValue="{comfortLevel}"
									state="Success"
									displayValue="{comfortLevel}" />
							</m:VBox>
						</layout:VerticalLayout>							
						</TileContent>
					</GenericTile>
					</f:items>		
				</f:GridContainer>
			</ScrollContainer>
		</content>
	</Page>

</mvc:View>